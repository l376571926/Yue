<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="girl"
            type="group.tonight.yue.Girl" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="?android:listPreferredItemPaddingLeft"
        android:layout_marginRight="?android:listPreferredItemPaddingRight"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="?android:listPreferredItemPaddingLeft">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/address_place_holder(girl.address)}"
                tools:text="地址：深圳市梅林关惠鑫公寓b栋" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/score_place_holder(girl.score)}"
                tools:text="评价：很漂亮，身材丰满" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/contact_info_place_holder(girl.contactInfo)}"
                tools:text="联系方式：13800138000" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>
